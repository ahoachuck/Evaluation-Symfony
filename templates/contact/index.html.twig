{% extends 'base.html.twig' %}

{% block meta_description %}{{ metaDescription }}{% endblock %}

{% block body %}
    <div class="row mb-5">
        <div class="col-lg-6 mb-4 mb-lg-0" data-aos="fade-right">
            <h1 class="display-5 fw-bold mb-3">Contactez-<span class="text-primary">nous</span></h1>
            <p class="lead mb-4">Une question, une demande spécifique ou un commentaire ? Notre équipe est là pour vous répondre dans les plus brefs délais.</p>
            
            <div class="d-flex flex-column gap-4 mb-5">
                <div class="d-flex align-items-center">
                    <div class="icon-box me-3 bg-primary bg-opacity-10 rounded-circle p-3 text-primary">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Notre adresse</h6>
                        <p class="mb-0 text-secondary">1 Rue Exemple, 75000 Paris, France</p>
                    </div>
                </div>
                
                <div class="d-flex align-items-center">
                    <div class="icon-box me-3 bg-primary bg-opacity-10 rounded-circle p-3 text-primary">
                        <i class="fas fa-phone"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Téléphone</h6>
                        <p class="mb-0 text-secondary">+33 1 23 45 67 89</p>
                    </div>
                </div>
                
                <div class="d-flex align-items-center">
                    <div class="icon-box me-3 bg-primary bg-opacity-10 rounded-circle p-3 text-primary">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Email</h6>
                        <p class="mb-0 text-secondary">contact@miniboutique.fr</p>
                    </div>
                </div>
                
                <div class="d-flex align-items-center">
                    <div class="icon-box me-3 bg-primary bg-opacity-10 rounded-circle p-3 text-primary">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div>
                        <h6 class="mb-1">Horaires d'ouverture</h6>
                        <p class="mb-0 text-secondary">Lun-Ven: 9h-18h | Sam: 10h-16h</p>
                    </div>
                </div>
            </div>
            
            <div class="mt-4">
                <h5 class="mb-3">Suivez-nous</h5>
                <div class="d-flex gap-3">
                    <a href="#" class="btn btn-outline-primary btn-sm rounded-circle">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="btn btn-outline-primary btn-sm rounded-circle">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="btn btn-outline-primary btn-sm rounded-circle">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="#" class="btn btn-outline-primary btn-sm rounded-circle">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6" data-aos="fade-left">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4 p-lg-5">
                    <h2 class="h4 mb-4">Envoyez-nous un message</h2>
                    
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.name) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'votre@email.com'}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.subject) }}
                            {{ form_widget(form.subject, {'attr': {'class': 'form-control', 'placeholder': 'Objet de votre message'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.subject) }}
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            {{ form_label(form.message) }}
                            {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': '5', 'placeholder': 'Écrivez votre message ici...'}}) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.message) }}
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100 py-3">
                            <i class="fa fa-paper-plane me-2"></i>Envoyer le message
                        </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-5 pt-3" data-aos="fade-up">
        <div class="ratio ratio-21x9 rounded-4 overflow-hidden shadow-sm">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d83998.76457430334!2d2.2769953051245684!3d48.85894658133855!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e1f06e2b70f%3A0x40b82c3688c9460!2sParis%2C%20France!5e0!3m2!1sfr!2sfr!4v1713379521049!5m2!1sfr!2sfr" 
                style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
{% endblock %}